{
  "swagger": "2.0",
  "info": {
    "title": "openPanel HTTP API",
    "version": "1.0",
    "contact": {
      "name": "openPanel",
      "url": "https://github.com/openPanel/core"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/initialize": {
      "get": {
        "summary": "Get nodes info before register",
        "description": "Get nodes info",
        "operationId": "InitializeService_GetClusterInfo",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/openPanelGetClusterInfoResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "tags": [
          "Initialize"
        ]
      },
      "post": {
        "summary": "Join a cluster",
        "description": "A node try to register to the cluster",
        "operationId": "InitializeService_Register",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/openPanelRegisterResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/openPanelRegisterRequest"
            }
          }
        ],
        "tags": [
          "Initialize"
        ]
      }
    }
  },
  "definitions": {
    "dqliteDqliteData": {
      "type": "object",
      "properties": {
        "data": {
          "type": "string",
          "format": "byte"
        }
      }
    },
    "entpbNode": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "name": {
          "type": "string"
        },
        "ip": {
          "type": "string"
        },
        "port": {
          "type": "string",
          "format": "int64"
        },
        "comment": {
          "type": "string"
        }
      }
    },
    "openPanelBroadcast": {
      "type": "object",
      "properties": {
        "type": {
          "$ref": "#/definitions/openPanelBroadcastType"
        },
        "payload": {
          "type": "string"
        }
      }
    },
    "openPanelBroadcastType": {
      "type": "string",
      "enum": [
        "NOTIFY_LINK_STATE_CHANGE"
      ],
      "default": "NOTIFY_LINK_STATE_CHANGE",
      "title": "- NOTIFY_LINK_STATE_CHANGE: payload include router.LinkStates in json format"
    },
    "openPanelEstimateLatencyResponse": {
      "type": "object",
      "properties": {
        "latency": {
          "type": "integer",
          "format": "int32"
        }
      }
    },
    "openPanelGetClusterInfoResponse": {
      "type": "object",
      "properties": {
        "nodes": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/entpbNode"
          }
        }
      }
    },
    "openPanelLinkState": {
      "type": "object",
      "properties": {
        "from": {
          "type": "string"
        },
        "to": {
          "type": "string"
        },
        "latency": {
          "type": "integer",
          "format": "int32"
        }
      }
    },
    "openPanelRegisterRequest": {
      "type": "object",
      "properties": {
        "ip": {
          "type": "string"
        },
        "port": {
          "type": "integer",
          "format": "int32"
        },
        "serverID": {
          "type": "string"
        },
        "csr": {
          "type": "string",
          "format": "byte"
        },
        "linkStates": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/openPanelLinkState"
          },
          "title": "link states from new node to all known nodes"
        }
      }
    },
    "openPanelRegisterResponse": {
      "type": "object",
      "properties": {
        "clientCert": {
          "type": "string",
          "format": "byte"
        },
        "clusterCACert": {
          "type": "string",
          "format": "byte"
        },
        "linkStates": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/openPanelLinkState"
          },
          "title": "link states of all known nodes, including the new node"
        }
      }
    },
    "openPanelUpdateLinkStateResponse": {
      "type": "object",
      "properties": {
        "linkStates": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/openPanelLinkState"
          },
          "title": "the link states of all known nodes, including the resumed node"
        }
      }
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    }
  }
}
